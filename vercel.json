{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/static/**", // Point build to the actual static files
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // Serve static files from the /static URL path, mapping to the public/static directory
    {
      "src": "/static/(.*)",
      "dest": "/public/static/$1"
    },
    // Serve the index.html file for the root path
    {
      "src": "/",
      "dest": "/public/static/index.html"
    },
    // Handle all other routes (API calls) with the Python function
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}

